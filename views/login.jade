extends layout

block content
	.container
		h1 Login Page
		p.lead Please login to access your phone logs.
		form(action="/login" method="post")
			.form-group
				input.form-control#username(type="text" name="username" placeholder="Username")
			.form-group
				input.form-control#password(type="password" name="password" placeholder="Password")
			.form-group
				input.btn.btn-default(type="submit" value="Submit")
		-if(message.length)
			p.alert.alert-danger #{message}
